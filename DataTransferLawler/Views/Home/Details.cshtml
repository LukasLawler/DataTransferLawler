@model CountryViewModel
@{ 
    ViewData["Title"] = "Country Details";
}

<h2>Country Details</h2>

<div class="row">
    <div class="col-6 col-sm-offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Country.CountryFlag" width=100 alt="" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Game: @Model.Country.Game.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Sport/Type: @Model.Country.Sport.Name</h4>
            </li>
            <li class="list-group-item">
                <a asp-action="Index" asp-route-activeGame="@Model.ActiveGame" asp-route-activeSport="@Model.ActiveSport">Return to home</a>
            </li>
        </ul>
    </div>
</div>