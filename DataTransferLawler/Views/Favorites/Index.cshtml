@model CountryListViewModel
@{ 
    ViewData["Title"] = "Favorites";
}
<div class="text-center">
    <h2>Favorites</h2>
    <form asp-action="Delete" method="post">
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary" asp-route-activeGame="@Model.ActiveGame" asp-route-activeSport="@Model.ActiveSport">Go back to home page</a>
        <button type="submit" class="btn btn-primary">Clear</button>
    </form>
    <br />
</div>

<div class="row">
    <div class="col-8 offset-2">
        <ul class="list-group">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/images/@country.CountryFlag" alt="" width=100 />
                        </div>
                        <div class="col-4">@country.Name</div>
                        <div class="col-4">@country.Game.Name @country.Sport.Name </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>